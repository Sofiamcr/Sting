<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new challenge</h1>
      <%= simple_form_for @challenge do |f| %>
        <%= f.input :name, as: :string %>
        <%= f.input :goal_qty, as: :float %>
        <%= f.input :unit, :collection => %w[Km Hours]%>
        <%= f.input :challenge_qty, as: :float %>
        <%= f.input :type, :collection => ["Running", "Walking", "Swimming", "Biking"]%>
        <%# the usernames of your friends %>
        <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" } } %></div>
        <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" } }%></div>
        <%= f.input :price, as: :float %>
        <%= f.input :card_num, as: :integer%>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
