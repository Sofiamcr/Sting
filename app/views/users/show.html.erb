<div class="container">
  <div class="card-profile">
    <div class= "avatar-name">
      <%= cl_image_tag @user.photo.key, crop: :fill, class: "avatar-profile" %>
      <h1 style="font-size:15vw"><%= @user.first_name %></h1>
    </div>
    <div class= "bio">
    <h2>BIO</h2>
    <p><%= @user.bio %></p>
    </div>
  </div>
  <% if @user == current_user %>
    <div class="text-center">
      <%= link_to "edit user info", edit_user_registration_path(@user), class: "btn btn-sting" %>
      <% if @user.connected_strava %>
        <%= image_tag asset_path('api_logo_pwrdBy_strava_horiz_white.png')  %>
      <% else %>
        <%= link_to image_tag("btn_strava_connectwith_orange.png"), @redirect_url  %>
      <% end %>
    </div>
  <% end %>
</div>

